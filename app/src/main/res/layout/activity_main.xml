<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TabHost
        android:id="@+id/tbhConversores"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/tabMonedas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDeM"
                        android:text="DE:"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboDeM"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Monedas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblAM"
                        android:text="A:"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboAM"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Monedas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tabLongitud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDeL"
                        android:text="DE:"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboDeL"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Longitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblAL"
                        android:text="A:"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboAL"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Longitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabMasa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDema"
                        android:text="DE:"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboDema"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Masa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblAma"
                        android:text="A:"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboAma"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Masa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabTiempo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDeT"
                        android:text="DE:"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboDeT"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Tiempo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblAT"
                        android:text="A:"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboAT"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Tiempo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tabAlmacenamiento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDeA"
                        android:text="DE:"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboDeA"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Almacenamiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblAA"
                        android:text="A:"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboAA"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Almacenamiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                android:id="@+id/tabVolumen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lblDeV"
                    android:text="DE:"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/cboDeV"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="100dp"
                    android:entries="@array/Volumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/lblAV"
                    android:text="A:"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/cboAV"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="100dp"
                    android:entries="@array/Volumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabTrasnferenciaDatos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDeTD"
                        android:text="DE:"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboDeTD"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Transferenciadedatos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblATD"
                        android:text="A:"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/cboATD"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="100dp"
                        android:entries="@array/Transferenciadedatos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/txtCantidad"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="100dp"
            android:hint="Cantidad a convertir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnCalcular"
            android:text="Calcular"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="calcular"
            tools:ignore="OnClick" />
        <TextView
            android:id="@+id/lblrespuesta"
            android:text="Respuesta: ?"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>